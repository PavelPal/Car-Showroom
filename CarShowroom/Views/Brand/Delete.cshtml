@model CarShowroom.Domain.Entities.Brand

@{
    ViewBag.Title = "Удалить: " + Model.Body;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div>
                    @Html.ActionLink("Вернуться назад", "Index")
                </div>
                <div class="form-wrap">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Body)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Body)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Country)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Country)
                        </dd>
                    </dl>

                    @if (Model.Image != null)
                    {
                        <p class="form-row form-row-first">
                            <img src="@Url.Action("GetBrandImage", "Image", new {Model.Id})" class="img-responsive"/>
                        </p>
                    }
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <p class="form-row">
                            <input type="submit" value="Удалить" class="button">
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>