@model CarShowroom.Domain.Entities.CarType

@{
    ViewBag.Title = "Изменить: " + Model.Body;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div>
                    @Html.ActionLink("Вернуться назад", "Index")
                </div>
                @using (Html.BeginForm("Update", "Engine", FormMethod.Post, new {@class = "form-wrap"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    @Html.HiddenFor(model => model.Id)

                    <p class="form-row form-row-first form-row-full-width">
                        @Html.LabelFor(m => m.Body)
                        @Html.TextBoxFor(m => m.Body, new {@class = "input-text"})
                        @Html.ValidationMessageFor(m => m.Body, "", new {@class = "text-danger"})
                    </p>

                    <p class="form-row">
                        <input type="submit" value="Изменить" class="button">
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}